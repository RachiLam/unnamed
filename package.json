{
  "name": "WaitingRoom",
  "productName": "Waiting Room",
  "version": "1.0.0",
  "main": "src/index.js",
  "author": "Rachid Lamouri",
  "build": {
    "appId": "com.RachiSite.WaitingRoom",
    "artifactName": "Waiting Room ${version}.${ext}",
    "files": [
      "src"
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    },
    "mac": {
      "target": "dmg"
    },
    "nsis": {
      "perMachine": false
    }
  },
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "build"
  },
  "dependencies": {
    "image-size": "^0.6.1",
    "jquery": "^3.2.1"
  },
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "^19.45.0"
  }
}
